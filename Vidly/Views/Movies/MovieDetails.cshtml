@model Vidly.Models.Movie

@{
    ViewBag.Title = "MovieDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>MovieDetails</h2>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
    <ul>
        <li>
            Genre: @Html.DisplayFor(model => model.Genre.Name)
        </li>
        <li>
            Release Date: @Html.DisplayFor(model => model.ReleaseDate)
        </li>
        <li>
            Date Added: @Html.DisplayFor(model => model.DateAdded)
        </li>
        <li>
            Stock: @Html.DisplayFor(model => model.NumberInStock)
        </li>
    </ul>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
